<form class="form">
  <div class="container">
    <div class="form-group">
      <input type="text" name="postcode" id="postcode" class="input field" pattern=".*\S.*" required />
      <label for="postcode" class="label">Postcode</label>
    </div>
    <div class="form-group">
      <select name="filter" id="filter" class="select field">
        <option value=""></option>
      {{#each parties}}
        {{#if this}}
        <option value="{{this}}">{{this}}</option>
        {{/if}}
      {{/each}}
      </select>
      <label for="filter" class="label">Filter by party</label>
    </div>
    <div class="form-group no-label">
      <button type="submit" name="submit" class="btn">Search</button>
    </div>
  </div>
</form>
